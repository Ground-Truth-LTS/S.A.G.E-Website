---
import Layout from '../layouts/Layout.astro';
import * as mobileAppContent from "../md-content/mobileappContent.md";
import {Image} from "astro:assets";
import startMobileApp from "../assets/start_mobile_app.png";
import homeScreenMobile from "../assets/high-fidelity/home.png";
import logScreenMobile from "../assets/high-fidelity/logs.png";
import homeEditScreen1 from "../assets/high-fidelity/homeEditScreen1.png";
import homeEditScreen2 from "../assets/high-fidelity/homeEditScreen2.png";
import Gallery from '../components/gallery';

const { title, startContent, endContent, titleNextSteps, UXContent, titleFigma, videoLink } = mobileAppContent.frontmatter;
---

<Layout>
    <div class="flex flex-col min-h-screen">        
        <h1 class="flex justify-center text-center pt-10 pb-4 px-4 md:px-0">{title}</h1>
        <div class="px-4 md:px-10 max-w-6xl mx-auto">
            <!-- Image and first content section -->
            <div class="flex flex-col md:flex-row gap-8 py-6 items-center">
                <div class="flex justify-center md:w-1/4">
                    <img 
                        class="w-42 md:w-full max-w-xs md:max-w-[200px] rounded-xl shadow-md" 
                        src={startMobileApp.src} 
                        alt="Current Progress"
                    />
                </div>
                <div class="md:w-2/3 mt-4 md:mt-0">
                    <p class="text-lg leading-relaxed">
                        {startContent}
                    </p>
                </div>
            </div>
            
            <!-- Second content section -->
            <div class="py-6">
                <p class="text-lg leading-relaxed">
                    {endContent}
                </p>
            </div>
        </div>        <div class="px-4 md:px-10 max-w-6xl mx-auto">
            <h1 class="flex justify-center text-center pt-8 pb-4 px-4 md:px-0">{titleNextSteps}</h1>
            
            <!-- Next steps section with image and text -->
            <div class="flex flex-col md:flex-row gap-8 py-6 items-center">
                <div class="flex justify-center md:w-1/3">
                    <div class="w-64 md:w-full max-w-xs rounded-lg shadow-md">
                        <Gallery client:load
                        images={[
                            { src: homeScreenMobile.src, alt: "Home Screen" },
                            { src: homeEditScreen1.src, alt: "Edit Screen 1" },
                            { src: homeEditScreen2.src, alt: "Edit Screen 2" },
                            { src: logScreenMobile.src, alt: "Log Screen" },
                        ]}
                        />
                    </div>

                </div>
                <div class="md:w-2/3 mt-4 md:mt-0">
                    <p class="text-lg leading-relaxed">
                        {UXContent}
                    </p>
                </div>
            </div>
        </div>
        <div class="w-full h-full flex flex-col justify-center items-center my-6 px-10">

            <h1 class="flex justify-center text-center pt-6 pb-4">{titleFigma}</h1>

            <iframe 
                src={videoLink} 
                title="Figma Prototype" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen
                class="w-200 h-96 max-w-screen px-10">
            </iframe>  
        </div>
      
    </div>
</Layout>

<style>
    @layer base {
        h1 {
            font-size: var(--text-6xl);
            @media screen and (max-width: 768px) {
                font-size: var(--text-4xl);
            }
            font-family: "Ubuntu sans", sans-serif;
            font-weight: 900;
        }
    }

    p {
        font-family: "Inter", sans-serif;
    }
</style>